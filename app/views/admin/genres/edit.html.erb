<div class="container my-4">
  <h4 class="title mx-3 my-2 bg-light"><strong>ジャンル編集</strong></h4>
  <div class="row mb-5">
    <div class="col-lg-10 my-5">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch, local: true do |f| %>
        <div class="field row">
          <label for="inputName", class="col-lg-2 col-form-label"><strong>ジャンル名</strong></label>
          <div class="col-lg-3">
            <%= f.text_field :name, id:'inputName', placeholder: 'ジャンル名' %>
          </div>
          <%= f.submit "変更を保存", class: "btn btn-success ml-5 px-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>