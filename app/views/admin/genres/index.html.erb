<div class="container">
  <h1 class="h4 bg-light mb-5 px-4">ジャンル一覧・追加</h1>
  
  <div class="row">
    <div class="col-lg-10">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, placeholder: 'ジャンル名' %>
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-6">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>