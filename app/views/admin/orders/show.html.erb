<div class="container">
  <h4 class="title"><strong>注文履歴詳細</strong></h4>
  <div class="row">
    <div class="col-10">
    <%= form_with model: @order, url: admin_order_path(@order) do |f| %>
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>購入者</th>
            <td><%= link_to @order.name, admin_customers_path %></td>
          </tr>

          <tr>
            <th>注文日</th>
            <td><%= l @order.created_at %></td>
          </tr>

          <tr>
            <th>配送先</th>
            <td><%= (@order.post_code_and_address_and_name) %></td>
          </tr>

          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>

          <tr>
            <th>注文ステータス</th>
            <td>
              <%= f.select :status, Order.order_statuses_i18n.invert %>
              <%= f.submit "更新", class: "btn btn-success" %>
            </td>
          </tr>
        </thead>
      </table>
    <% end %>
    </div>

<!--注文の詳細と制作ステータス-->
    <table>
      <tr class="thead-light">
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
        <th></th>
      </tr>
    <% @order_details.each do |order_detail| %>
      <% @sum = 0 %>
      <% @sum += order_detail.item.with_tax_price %>
      <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch , local: true do |f| %>
      <table>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.with_tax_price %></td>
          <td>
            <%= f.select :manufacture_status,  OrderDetail.manufacture_statuses_i18n.invert %>
            <%= f.submit "更新", class:"btn btn-success" %>>
          </td>
        </tr>
      <% end %>
    <% end %>
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_price.to_s(:delimited) %>円</td>
        </tr>

        <tr>
          <th>送料</th>
          <td><%= @order.shipping_cost.to_s(:delimited) %>円</td>
        </tr>

        <tr>
          <th>請求合計</th>
          <td><%= @order.total_price_sum.to_s(:delimited) %>円</td>
        </tr>
      </table>
    </table>
  </div>
</div>
