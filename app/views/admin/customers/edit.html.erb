<div class="container">
  <h4 class="title"><strong><%= @customer.full_name %>さんの会員情報編集</strong></h4>
  <div class="row">
    <div class="col-10">
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
        <div class="field row">
          <label class="col-3">会員ID</label>
          <p class="col-1"><%= @customer.id %></p>
        </div>

        <div class="field row">
          <label for="inputName" class=" col-3 col-form-label">氏名</label>
          <div class="col-3">
            <%= f.text_field :last_name, class:"form_control", id:'inputName' %>
          </div>
          <div class="col-3">
            <%= f.text_field :first_name, class:"form_control", id:'inputName' %>
          </div>
        </div>

        <div class="field row">
          <label for="inputNameKana" class="col-3 col-form-label">フリガナ</label>
          <div class="col-3">
            <%= f.text_field :last_name_kana, class:"form_control", id:'inputName' %>
          </div>
          <div class="col-3">
            <%= f.text_field :first_name_kana, class:"form_control", id:'inputName' %>
          </div>
        </div>

        <div class="field row">
          <label for="inputPostal_code" class="col-3 col-form-label">郵便番号</label>
          <div class="col-3">
            <%= f.text_field :postal_code, class:"form_control", id:'inputPostal_code' %>
          </div>
        </div>

        <div class="field row">
          <label for="inputAddress" class="col-3 col-form-label">住所</label>
          <div class="col-3">
            <%= f.text_field :address, class:"form_control size-input-address", id:'inputAddress' %>
          </div>
        </div>

        <div class="field row">
          <label for="inputTelephone_number" class="col-3 col-form-label">電話番号</label>
          <div class="col-3">
            <%= f.text_field :telephone_number, class:"form_control", id:'inputTelephone_number' %>
          </div>
        </div>

        <div class="field row">
          <label for="inputEmail" class="col-3 col-form-label">メールアドレス</label>
          <div class="col-3">
            <%= f.email_field :email, class:"form_control", id:'inputEmail' %>
          </div>
        </div>

        <div class="field row">
          <label for="inputStatus" class="col-3 col-form-label">会員ステータス</label>
          <div class="col-3">
            <%= f.radio_button :is_active, true, id:'inputStatusTrue' %>
            <label for="inputStatusTrue" class="col-form-label">有効</label>
            <%= f.radio_button :is_active, false, id:'inputStatueFalse' %>
            <label for="inputStatusFalse" class="col-form-label">退会</label>
          </div>
        </div>

        <div class="col-3">
          <%= f.submit "変更を保存", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>