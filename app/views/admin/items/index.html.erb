<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>商品一覧</h2>
    </div>
    <div>
      <%= link_to new_admin_item_path do %>
        <i class="fa-solid fa-circle-plus fa-3x"></i>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <table class="table text-center mb-5">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td>
                <%= item.price.to_s(:delimited) %>
              </td>
              <td>
                <%= item.genre.name %>
              </td>
              <td>
                <% if item.is_active == true %>
                  <label class="text-success">販売中</label>
                <% else %>
                  <label class="text-danger">販売停止中</label>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="col d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>