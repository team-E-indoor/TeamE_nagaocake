<div class="container">
  <h2>商品詳細</h2>
  
  <div class="row">
    <div class="col-lg-4">
      <%= image_tag @item.item_image, size: "200,200" %>
    </div>
    <div class="col-lg-8">
      <table class="table">
        <tbody>
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.description %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th>税込価格(税抜価格)</th>
            <td><%= @item.add_tax_price.to_s(:delimited) %>
                (<%= @item.price.to_s(:delimited) %>) 円
            </td>
          </tr>
          <tr>
            <th style="border:none;">販売ステータス</th>
            <td style="border:none;">
              <% if @item.is_active == true  %>
                <span class="text-success">販売中</span>
              <% else %>
                <span class="text-danger">販売停止中</span>
              <% end %>
            </td>
          </tr>
          <tr>
            <div class="text-center">
              <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
            </div>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>