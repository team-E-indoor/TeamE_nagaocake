<div class="container">
  <h2 class="col-lg-3"style="background-color: #dcdcdc;">商品詳細</h2>

  <div class="row">
    <div class="col-md-6">
      <%= image_tag url_for(@item.image), class: 'img-fluid', style: 'width: 65%;' %>
    </div>
    <div class="col-md-6">
      <table class="table">
        <tbody>
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.item_description %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th>税込価格(税抜価格)</th>
            <td>
              <%= number_with_delimiter((@item.price * 1.1).round) %>円 ( <%= number_with_delimiter(@item.price) %>円 )
            </td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td>
              <% if @item.is_active == true  %>
                <span class="text-success">販売中</span>
              <% else %>
                <span class="text-danger">販売停止中</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div>
            <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>