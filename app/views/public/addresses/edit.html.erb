<div class="container">
  <div class="row">
    <h2>配送先編集</h2>
    <div class="col-md-12 mt-5">
      <%= form_with model: @address, url: address_path(@address.id) do |f| %>
        <table class="table">
          <tr>
            <th style="border:none;" class="w-25">郵便番号(ハイフンなし)</th>
            <td style="border:none;"><%= f.text_field :post_code %></td>
          </tr>
          <tr>
            <th style="border:none;" class="w-25">住所</th>
            <td style="border:none;"><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th style="border:none;" class="w-25">宛名</th>
            <td style="border:none;"><%= f.text_field :name %></td>
            <td style="border:none;"><%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>