<h2>配送先登録/一覧</h2>
<%= form_with model: @address, url: addresses_path, method: :post do |f| %>
  <table class="table">
    <tr>
      <th style="border:none;" class="w-25">郵便番号(ハイフンなし)</th>
      <td style="border:none;"><%= f.text_field :post_code, placeholder: "0001111" %></td>
    </tr>
    <tr>
      <th style="border:none;" class="w-25">住所</th>
      <td style="border:none;"><%= f.text_field :address, placeholder: "東京都杉並区0-0" %></td>
    </tr>
    <tr>
      <th style="border:none;" class="w-25">宛名</th>
      <td style="border:none;"><%= f.text_field :name, placeholder: "山田太郎" %></td>
      <td style="border:none;"><%= f.submit "新規登録", class: "btn btn-success btn-lg mx-auto" %></td>
    </tr>
  </table>
<% end %>

<table class="table table-bordered w-50">
  <thead class="table-light">
    <tr>
      <th class="table-active">郵便番号</th>
      <th class="table-active">住所</th>
      <th class="table-active">宛名</th>
      <th class="table-active"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address. name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
          <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
    <% end %>
    </tbody>
</table>