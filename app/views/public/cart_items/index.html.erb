<div class="container">
  <div class="row p-5">
    <div class="col-lg-6">
      <h4>ショッピングカート</h4>
    </div>
    <div class="col-lg-6">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class:'btn btn-danger' %>
    </div>
  </div>

  <div class="row p-5">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_image(70,70) %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
                  <%= f.hidden_field :item_id, value: cart_item.id  %>
                  <%= f.select :amount, *[1..9] %>
                  <%= f.submit '変更', class: "btn btn-success" %>
                <% end %>
            </td>
          <td><%= cart_item.subtotal%></td>
            <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class:"btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <table class="table">
        <tr>
          <td>合計金額</td>
          <td><%= @total.round.to_s(:delimited) %></td>
        </tr>
      </table>
  </div>

  <div class="row p-5">
    <div class="col-lg-6">
      <%= form_with url: root_path, method: :get, local: true do |form| %>
       <%= form.submit '買い物を続ける', class: "btn btn-primary" %>
      <% end %>
    </div>

    <div class="col-lg-6">
      <% if @cart_items.present? %>
        <%= form_with url: new_order_path, method: :get, local: true do |form| %>
          <%= form.submit '情報入力に進む', class: "btn btn-success" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>