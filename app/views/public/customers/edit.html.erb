
<div class="container">
  <div class="row">
    <div class="col">
        <div class="w-25 bg-light text-center">
          <p>会員情報編集</p>
        </div>

    <table>
       <tr>
        <%= form_with model: @customer, url: customers_information_path, method: :patch, local: true do |f| %>
         <td>名前</td>
         <td><%= f.text_field :last_name %></td>
         <td><%= f.text_field :first_name %></td>
       </tr>

       <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.text_field :first_name_kana %></td>
       </tr>

       <tr>
         <td>郵便番号(ハイフンなし)</td>
         <td><%= f.text_field :post_code %></td>
         <td></td>
       </tr>

       <tr>
         <td>住所</td>
         <td><%= f.text_field :address, size: 40  %></td>
       </tr>

       <tr>
         <td>電話番号(ハイフンなし)</td>
         <td><%= f.text_field :phone_number %> </td>
  　      <td></td>
       </tr>

       <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email %></td>
       </tr>

      <tr>
        <td></td>
        <td> <%= f.submit'編集内容を保存', class: "btn btn-sm btn-success" %>

        </div> </td>
       <% end %>
      </tr>
    </table>
