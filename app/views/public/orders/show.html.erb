<div class="container">
  <h3 class="mt-3 w-25 bg-light text-dark text-center">注文履歴詳細</h3>
  <div class="row">
    <div class="col mt-3">

      <h6><strong>注文情報</strong></h6>

      <table class="mt-4 table table-bordered">
        <tr>
          <th class="table-secondary">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送先</th>
          <td>
            <%= "〒" + @order.post_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="table-secondary">支払方法</th>
          <td>
            <%= @order.payment_method_i18n %>
          </td>
        </tr>
        <tr>
          <th class="table-secondary">ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>

    <div class="col mt-3">
      <h6><strong>請求情報</strong></h6>
      <table class="mt-4 table table-bordered">
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= @order.total_price - @order.shipping_cost %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th class="table-danger"><strong>ご請求額</strong></th>
          <td class="table-danger"><%= @order.total_price %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col mt-3">
      <h6><strong>注文内容</strong></h6>

      <table class="mt-4 table table-bordered">
        <thead class="table-secondary">
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.quantity * order_detail.item.with_tax_price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>