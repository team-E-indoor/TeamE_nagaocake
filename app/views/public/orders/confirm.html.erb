<div class="container">
  <h4 class="title"><strong>注文情報確認</strong></h4>
  <div class="row">
    <div class="col">

      <table class="table table-bordered mt-3">
        <thead>
          <tr class="bg-light">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_image(70,70) %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price.to_s(:dalimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
          </tr>
            <% @total += cart_item.subtotal %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col">
      <table class="table table-bordered mt-3">
        <tbody>
          <tr>
            <th class="bg-light">送料</th>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <th class="bg-light">商品合計</th>
            <td><%= @total %></td>
          </tr>
          <tr>
            <th class="bg-light">請求金額</th>
            <% @order.total_price = @order.shipping_cost + @total %>
            <td><%= @order.total_price %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="mt-3">
        <tbody>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>お届け先</th>
            <td class="col-8">〒
            <%= @order.post_code %>
            <%= @order.address %><br>
            <%= @order.name %>
          </tr>
        </tbody>
      <table>
    </div>
  </div>

  <div class="row justify-content-center">
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
      <%= f.hidden_field :customer_id %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :total_price %>
      <%= f.hidden_field :shipping_cost %>
      <%= f.hidden_field :post_code %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :status %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
  </div>
</div>