<div class="container">
  <div class="row">
    <div class="col">
        <div class="w-25 bg-light text-center">
          <p>新規会員登録</p>
        </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <table>
       <tr>
         <td><%= f.label :名前 %></td>
         <td><%= f.label :"(姓)" %></td>
         <td><%= f.text_field :last_name %></td>
         <td><%= f.label :"(名)" %></td>
         <td><%= f.text_field :first_name %></td>
       </tr>

       <tr>
        <td><%= f.label :フリガナ %></td>
        <td><%= f.label :"(セイ)" %></td>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.label :"(メイ)" %></td>
        <td><%= f.text_field :first_name_kana %></td>
       </tr>

       <tr>
        <td><%= f.label :email %></td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
       </tr>

       <tr>
         <td><%= f.label :"郵便番号(ハイフンなし)" %> </td>
         <td></td>
         <td><%= f.text_field :post_code %></td>
       </tr>
       <tr>
         <td><%= f.label :"住所" %></td>
         <td></td>
         <td><%= f.text_field :address, size: 40  %></td>
       </tr>

       <tr>
         <td><%= f.label :"電話番号(ハイフンなし)" %> </td>
         <td></td>
         <td><%= f.text_field :phone_number %> </td>
       </tr>

       <tr>
        <td><%= f.label :"パスワード（6文字以上）" %></td>
        <% if @minimum_password_length %>
        <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
        <% end %>
       <td></td>
       <td> <%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>

      <tr>
        <td><%= f.label :"パスワード（確認用）" %></td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>

      <tr>
        <td></td>
        <td></td>
        <td> <div class="actions">
           <%= f.submit "新規登録" ,class: "btn btn-sm btn-success" %>
        </div> </td>
      </tr>
       <% end %>
    </table>

        <div class="w-25  bg-light text-center">
          <p>すでに登録済みの方</br>
         </div>
           <%= link_to 'こちら',new_customer_session_path %>からログインしてください。
    </div>
  </div>
</div>
