<div class="container">
  <div class="row">
    <div class="col">
      <div class="w-25 bg-light text-center">
        <p>ログイン</p>
      </div>

      <div class="w-25 bg-light text-center">
        <p>会員の方はこちらからログイン</p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <table>
       <tr>
         <td><%= f.label :"メールアドレス" %></td>
         <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
       </tr>

       <tr>
        <td><%= f.label :"パスワード" %></td>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
       </tr>

        <!--<%# if devise_mapping.rememberable? %>-->
        <!-- <div class="field">-->
        <!--  <%#= f.check_box :remember_me %>-->
        <!--  <%#= f.label :remember_me %>-->
        <!--  </div>-->
        <%# end %>
        <tr>
          <td></td>
          <td><div class="actions">
          <%= f.submit "ログイン", class: 'btn btn-sm btn-primary' %>
              </div></td>
        </tr>
      <% end %>
      </table>

       <div class="w-25 bg-light text-center" >
          <p>会員登録が済みでない方</br>
       </div>
           <%= link_to 'こちら',new_customer_registration_path %>から新規登録を行なってください。


    </div>
  </div>
</div>
